@model CityWeather;

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" ? />
    <title>Weather</title>
    <link rel="stylesheet" href="~/styles.css" />
</head>
<body>
    <div id="container">
        <div id="top">
            <h1>Weather</h1>
        </div>
        
        @if (Model != null)
        {
            <div id="city-center">

                <div class="weather-panel">
                    <div class="left-part">
                        <h2 class="city-name">@Model.CityName</h2>
                        <h3 class="city-time">@Model.DateAndTime.ToString("hh:mm tt")</h3>
                    </div>

                    <div class="right-part">
                        <h1>@Model.TemperatureFahrenheit &#8457 </h1>
                    </div>

                </div>

            </div>

            <div id="down">
                <a href="~/" class="back-to-home">Back to Weather Home Page</a>
            </div>
        }
        else
        {
            <h1>City Code is invalid.</h1>
        }
    </div>
</body>
</html>