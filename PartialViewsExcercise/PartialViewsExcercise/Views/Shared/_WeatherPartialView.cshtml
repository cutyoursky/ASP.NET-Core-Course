@model CityWeather;

@{
    string GetColorByTemperature(int temperature)
    {
        if(temperature < 44)
        {
            return "blue-background";
        }
        else if(temperature >= 44 && temperature <= 75)
        {
            return "green-background";
        }
        else
        {
            return "orange-background";
        }
    }
}


<div class="weather-panel @GetColorByTemperature(Model.TemperatureFahrenheit)">
    <div class="left-part">
        <h2 class="City-name">@Model.CityName</h2>
        <h3 class="city-time">@Model.DateAndTime.ToString("hh:mm tt")</h3>
        <a href="~/weather/@Model.CityUniqueCode" class="city-details">Details</a>
    </div>
    <div class="right-part">
        <h1>@Model.TemperatureFahrenheit &#8457 </h1>
    </div>
</div>

